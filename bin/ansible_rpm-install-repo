# Add the command line arg  -e hosts=ianm to override the default
# playbook hosts setting

SCRIPT_DIR=$(dirname `which $0`)

usage() {
	printf "%s\n%s\n%s\n\n%s\n" \
			"usage: ${0##*/} repo_name [-e]" \
			"	repo_name: name of repository to install. eg. epel" \
			"	-e hosts={comma seperated list of hostnames to override the default}" \
			"Valid repository names: cert epel ius percona remi repoforge"
	exit 1
}

[ $# -gt 0 ] || usage

if [[ ${1:0:1} == "-" ]] ; then

	# First arg looks like an option not a repo name.
	usage
fi

REPO_NAME=${1}
shift;

# Debug
#printf "Repo name = ${REPO_NAME}\n\n"
#exit

# Include our default settings
. ${SCRIPT_DIR}/ansible_common

# Debug
#printf "path = ${ANSIBLE_PLAYBOOKS_PATH}\n\n"

ansible-playbook ${MUNGED_ARGS} \
	--ask-become-pass \
	--inventory=${ANSIBLE_HOSTS_PATH}/hosts \
	--extra-vars="repo=${REPO_NAME}" \
	${ANSIBLE_PLAYBOOKS_PATH}/rhel/repo/install-repo.yml


